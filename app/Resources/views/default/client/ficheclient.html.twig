{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-12">
	<div class="col-md-1"></div>
	<div class="col-md-5 ">
		<div class="col-md-12 col1">
			<div class="col-md-12 haut">Fiche client </div>
			<div class="col-md-12 milieu2">
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Nom :</label>
					</div>
						<div class="col-md-6">	{{ client.nom }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Type :</label>
					</div>
					<div class="col-md-6">	{{ client.type }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Adresse :</label>
					</div>
					<div class="col-md-6">	{{ client.adresse }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Ad. de facturation :</label>
					</div>
					<div class="col-md-6">	{{ client.adressefactu }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Email :</label>
					</div>
					<div class="col-md-6">	{{ client.email }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Portable :</label>
					</div>
					<div class="col-md-6">	{{ client.portable }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Fixe :</label>
					</div>
					<div class="col-md-6">	{{ client.telephonefixe }}
					</div>
				</div>
				<div class="col-md-12 cli-widg">
					<div class="col-md-6">
						<label for="nom">Ecole :</label>
					</div>
					<div class="col-md-6">	{{ client.ecole }}
					</div>

				</div>
			</div>
		</div>
		<div class="col-md-12 echeancier">
			<div class="col-md-12 haut">
				Echeancier 
			</div>
			<div class="col-md-12 milieu">
				echeancier1
				<br/>
				echeancier2
			</div>
		</div>
	</div>

	<div class="col-md-5 col2">
		<div class="col-md-12 devis btn-group">
			<div class="col-md-12 haut">Devis </div>
			<div class="col-md-12 milieu">
				{% if tabde is empty %}
					<p>Aucun Devis en cours</p>
				{% else %}
					{% for devis in tabde %}
						<div class="col-md-9">{{ devis.reference }} | {{ devis.datecreation }}</div>
						<div class="col-md-3">
							<button type="button" class="btn btn-xs btn-info">Action</button>
							<button type="button" class="btn btn-xs btn-info 	dropdown-toggle" data-toggle="dropdown">
								<span class="caret"></span>
								<span class="sr-only">Toggle Dropdown</span>
							</button>
							<ul class="dropdown-menu" role="menu">
								<li><a href="{{ path('new_devis', { 'idclient': client.id, 'iddocument': devis.id }) }}">Voir le Devis</a></li>
								<li><a href="{{ path('new_devis', { 'idclient': client.id, 'iddocument': devis.id }) }}">Generer la facture</a></li>
								<li><a href="{{ path('fiche_client', { 'idclient': client.id }) }}" onclick="return(prompt('merci de justifier le refus'))">Refusé</a></li>
								<li class="divider"></li>
								<li><a href="">Supprimer</a></li>
							</ul><br/>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>
		<div class="col-md-12 facture">
			<div class="col-md-12 haut">Facture </div>
			<div class="col-md-12 milieu">
				{% if tabfa is empty %}
					<p>Aucune facture en cours</p>
				{% else %}
					{% for facture in tabfa %}
						<div class="col-md-9">{{ facture.reference }} | {{ facture.datecreation }}</div>
						<div class="col-md-3">
							<button type="button" class="btn btn-xs btn-info">Action</button>
							<button type="button" class="btn btn-xs btn-info 	dropdown-toggle" data-toggle="dropdown">
								<span class="caret"></span>
								<span class="sr-only">Toggle Dropdown</span>
							</button>
							<ul class="dropdown-menu" role="menu">
								<li><a href="{{ path('new_devis', { 'idclient': client.id, 'iddocument': facture.id }) }}">Voir la Facture</a></li>
								<li><a href="{{ path('reglement', { 'idclient': client.id }) }}">Emettre un avoir</a></li>
								<li><a href="{{ path('reglement', { 'idclient': client.id }) }}">Classée comme envoyée</a></li>
								<li><a href="{{ path('reglement', { 'idclient': client.id }) }}" onclick="return(prompt('Vous allez supprimer cette facture'))";>Supprimer</a></li>
								<li class="divider"></li>
								<li><a href="{{ path('reglement', { 'idclient': client.id }) }}">Réglement</a></li>
							</ul><br/>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>

		<div class="col-md-12 avoir btn-group">
			<div class="col-md-12 haut">Avoir </div>
			<div class="col-md-12 milieu">
				{% if tabav is empty %}
					<p>Aucun avoir en cours</p>
				{% else %}
					{% for avoir in tabav %}
						<div class="col-md-9">{{ avoir.reference }} | {{ avoir.datecreation }}</div>
						<div class="col-md-3">
							<button type="button" class="btn btn-xs btn-info">Action</button>
							<button type="button" class="btn btn-xs btn-info 	dropdown-toggle" data-toggle="dropdown">
								<span class="caret"></span>
								<span class="sr-only">Toggle Dropdown</span>
							</button>
							<ul class="dropdown-menu" role="menu">
								<li><a href="{{ path('reglement', { 'idclient': client.id }) }}">Supprimer</a></li>
							</ul><br/>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>
		<div class="col-md-12 bout">
			<div class="col-md-8 ">

				<a href="{{ path('new_document', { 'idclient': client.id, 'type': 'devis' }) }}"><input type="submit" class="btn-lg btn-info" value="créer devis"/>
				</a>
			</div>
			<div class="col-md-4 ">
				<a href="{{ path('new_document', { 'idclient': client.id, 'type': 'facture' }) }}"><input type="submit" class="btn-lg btn-info" value="créer facture"/>
				</a>

			</div>
		</div>
	</div>
</div>

{% endblock %}