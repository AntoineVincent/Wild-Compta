{% extends 'base.html.twig' %}

{% block body %}


<div class="col-md-3"></div>
<div class="col-md-6 edit-orga-form">
    <div class="col-md-12">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
	<form action="{{ path('edit_ecole', { 'idecole': ecole.id }) }}" method="post">
		<div class="col-md-12">
			<h2 class="list-organisme-title"> Editer une Ecole </h2>
		</div>
        <div class="col-md-12 edit-line">
            <div class="col-md-4">
                <label for="ville">Ville :</label>
            </div>
            <div class="col-md-8">
                <input type="string" id="ville" name="ville" value="{{ ecole.ville }}"/>
            </div>
        </div>
        <div class="col-md-12 edit-line">
            <div class="col-md-4">
                <label for="adresse">Adresse:</label>
            </div>
            <div class="col-md-8">
                <textarea class="adresse-input" type="text"  id="adresse" name="adresse" value="{{ ecole.adresse }}">{{ ecole.adresse }}</textarea>
            </div>
        </div>
        <div class="col-md-12">
            <input type="hidden" name="hidden" value="1"/>
        </div>
        <div class="col-md-12">
        	<div class="col-md-5"></div>
        	<div class="col-md-2">
            	<input type="submit" class="btn btn-primary" id="_submit" name="submit" value="Envoyer" />
            </div>
            <div class="col-md-5"></div>
        </div>
    </form>
</div>
<div class="col-md-3"></div>

{% endblock %}