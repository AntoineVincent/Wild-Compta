{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-12">
	<h2 class="list-client-title"> Liste des Clients </h2>
</div>
<div class="col-md-12">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<div class="col-md-12 table-client-test">
	        {% for label, flashes in app.session.flashbag.all %}
	            {% for flash in flashes %}
	                <div class="alert alert-{{ label }}">
	                    {{ flash }}
	                </div>
	            {% endfor %}
	        {% endfor %}
    	</div>
		<table id="myTable" class="display" cellspacing="0" width="100%">
			<thead>
		   		<tr>
		       		<th class="search-table-title">Nom</th>
		       		<th class="search-table-title">Typologie</th>
		       		<th class="search-table-title">Ecole</th>
		       		<th class="search-table-title">Dernière MAJ</th>
		   		</tr>
		   	</thead>
		   	<tfoot>
		   		<tr>
		       		<th class="search-table-title">Nom</th>
		       		<th class="search-table-title">Typologie</th>
		       		<th class="search-table-title">Ecole</th>
		       		<th class="search-table-title">Dernière mise à jour</th>
		   		</tr>
		   	</tfoot>
    		<tbody>
		   	{% for client in clients %}
				<tr>
			   		<td class="type-line">{{ client.nom }}</td>
			   		<td>{{ client.type }}</td>
			    	<td class="contenu-tab">{{ client.idecole }}</td>
			   	</tr>
			{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="col-md-1"></div>
</div>

		<script>
			$(document).ready(function () {

				$('#myTable tfoot .search-table-title').each( function () {
        			var title = $('#myTable thead .search-table-title').eq( $(this).index() ).text();
        			$(this).html( '<input style="width:160px; color:black;" type="text" placeholder="Search '+title+'" />' );
    			});

    			var table = $('#myTable').DataTable( {
    				select: {
            			style: 'multi'
        			},
    				responsive: true,
    				keys: true,
    				autoFill: true,
    				rowReorder: true,
    				columnDefs: [
            			{ orderable: true, className: 'reorder', targets: [0,1,2] },
            			{ orderable: false, targets: '_all' }
        			],
    				dom: 'Bfrtip',
    				lengthMenu: [
            			[ 10, 25, 50, -1 ],
            			[ '10 lignes', '25 lignes', '50 lignes', 'Tout voir' ]
        			],
    				buttons: [
    					'pageLength',
        				{
            				extend: 'copy',
            				text: 'Copier'
        				},
        				'excel',
        				'pdf',
        				'colvis'
    				],
    				colReorder: true
				});

				$("#myTable tfoot input").on( 'keyup change', function () {
        			table
            			.column( $(this).parent().index()+':visible' )
            			.search( this.value )
            			.draw();
            	});
			});
		</script>

{% endblock %}