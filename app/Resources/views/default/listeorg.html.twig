{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-12">
	<h2 class="list-org-title"> Liste des organismes existants </h2>
</div>
<div class="col-md-12">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="col-md-12">
	        {% for label, flashes in app.session.flashbag.all %}
	            {% for flash in flashes %}
	                <div class="alert alert-{{ label }}">
	                    {{ flash }}
	                </div>
	            {% endfor %}
	        {% endfor %}
    	</div>
		<table class="tab_orga">
		   <tr>
		       <th>Nom</th>
		       <th>Adresse</th>
		   </tr>

		   {% for organisme in organismes %}
				<tr>
			       <td>{{ organisme.nom }}</td>
			       <td class="adresse-tab">{{ organisme.adresse }}</td>
			       <td> <a href="{{ path('edit_organisme', { 'idorganisme': organisme.id }) }}">Editer</a> </td>
			       <td> <a href="{{ path('supr_organisme', { 'idorganisme': organisme.id }) }}">Supprimer</a> </td>
			   </tr>
			{% endfor %}
		</table>
	</div>
	<div class="col-md-2"></div>
</div>

{% endblock %}