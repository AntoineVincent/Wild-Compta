{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-12">
	<h2 class="list-product-title"> Liste des Produits Existants </h2>
</div>
<div class="col-md-12">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="col-md-12">
	        {% for label, flashes in app.session.flashbag.all %}
	            {% for flash in flashes %}
	                <div class="alert alert-{{ label }}">
	                    {{ flash }}
	                </div>
	            {% endfor %}
	        {% endfor %}
    	</div>
		<table>
		   <tr>
		       <th>Type</th>
		       <th>Nom</th>
		       <th>Contenu</th>
		   </tr>

		   {% for product in products %}
				<tr>
			       <td class="type-line">{{ product.type }}</td>
			       <td>{{ product.nom }}</td>
			       <td class="contenu-tab">{{ product.contenu }}</td>
			       <td> <a href="{{ path('edit_product', { 'idproduct': product.id }) }}">Editer</a> </td>
			       <td> <a href="{{ path('supr_product', { 'idproduct': product.id }) }}">Supprimer</a> </td>
			   </tr>
			{% endfor %}
		</table>
	</div>
	<div class="col-md-2"></div>
</div>

{% endblock %}